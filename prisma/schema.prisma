generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model budget {
  id       Int    @id @default(autoincrement())
  category String
  limit    Float
  userId   Int
  user     user   @relation(fields: [userId], references: [id], map: "budget_user_fkey")

  @@index([userId], map: "budget_user_idx")
}

model expense {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String
  date        DateTime @default(now())
  userId      Int
  user        user     @relation(fields: [userId], references: [id], map: "expense_user_fkey")

  @@index([userId], map: "expense_user_idx")
}

model goal {
  id          Int      @id @default(autoincrement())
  description String
  targetDate  DateTime
  amount      Float
  userId      Int
  user        user     @relation(fields: [userId], references: [id], map: "goal_user_fkey")

  @@index([userId], map: "goal_user_idx")
}

model user {
  id       Int       @id @default(autoincrement())
  email    String    @unique(map: "User_email_key")
  password String
  income   Float
  name     String
  budgets   budget[]
  expenses  expense[]
  goals     goal[]
}
